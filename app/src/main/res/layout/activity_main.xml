<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_splash_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@mipmap/backgroundwb">

    <ImageView
        android:background="#b3000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/header_icon"
        android:layout_width="200dp"
        android:layout_height="@dimen/image_header_dimen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/image_header_top_margin"
        android:src="@mipmap/wedes" />
    <com.hanks.htextview.line.LineTextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingRight="10dp"
          android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:text="ONE WINDOW \n WATER TREATMENT CHEICAL SOLUTION"
        android:textSize="16sp"


        app:animationDuration="6000"
        app:lineColor="#ffffff"
        app:lineWidth="4dp"/>


    <TextView
        android:textSize="12dp"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
       android:textAlignment="center"
        android:textColor="@android:color/white"
        android:text="Water Bird Water Treatment Chemicals L.L.C."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
